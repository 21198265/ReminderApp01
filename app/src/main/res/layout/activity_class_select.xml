<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassSelect">

    <Button
        android:id="@+id/createClassBtn"
        android:layout_width="155dp"
        android:layout_height="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"
        android:text="Create new class"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/CalendarBtn"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="76dp"
        android:text="Calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Class3Btn"
        android:layout_width="151dp"
        android:layout_height="75dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="316dp"
        android:text="Class 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Class4Btn"
        android:layout_width="151dp"
        android:layout_height="75dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="200dp"
        android:text="Class 4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Class2Btn"
        android:layout_width="151dp"
        android:layout_height="75dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="236dp"
        android:text="Class 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Class1Btn"
        android:layout_width="151dp"
        android:layout_height="75dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="124dp"
        android:text="Class 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>